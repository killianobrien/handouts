%\newcommand{\cbox}[1]{\setcboxwidth\colorbox{black}{\begin{minipage}{\cboxwidth}\color{white}\sffamily #1 \end{minipage}}}
\newcommand{\cbox}[1]{\begin{tcolorbox}[left=0.5mm,right=0.5mm,top=0.5mm,bottom=0.5mm, boxsep=2pt, boxrule=0pt,colback=black]\color{white}\sffamily #1 \end{tcolorbox}}

% gray background box
\newcommand{\gbox}[1]{\colorbox{gray!30}{\setcboxwidth\begin{minipage}{\cboxwidth}\color{black} #1 \end{minipage}}}

%sheet title banner, uses \cbox, 4 arguments: top left, top right, bottom left, bottom right
\newcommand{\tuttitle}[4]{\cbox{\textbf{#1} \hfill {#2}\\{#3} \hfill {\Small #4}}\vskip 36pt}

%topic banner
\newcommand{\topic}[1]{\bigbreak\cbox{\textbf{#1}}\smallskip}

%subtopic banner
\newcommand{\subtopic}[1]{\tcbox[nobeforeafter, left=0mm,right=10mm,top=0.5mm,bottom=0mm, boxsep=2pt, boxrule=0pt,colback=black!50]{\color{white}\sffamily #1}\\}

%caption
\newcommand{\captn}[1]{\medbreak\leftline{\textbf{#1}}\nobreak}
